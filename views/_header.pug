header.header
      nav.nav.nav--tours
        a.nav__el(href="/") All tours
      .header__logo
        img(src="/img/logo-white.png" alt="Natours Logo")
      nav.nav.nav--user
      if user
        a.nav__el.nav__el--logout(href="#") Logout
        a.nav__el(href="/me")
          img.nav__user-img(src=`/img/users/${user.photo}` alt="User Photo")
          span=user.name.split(" ")[1]
      else
        a.nav__el(href="/login") Log in
        a.nav__el.nav__el--cta(href="#") Sign up